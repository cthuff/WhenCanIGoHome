{
  "name": "whencanigohome",
  "version": "1.0.0",
  "description": "\"A Simple Clock Out Calculator\"",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cthuff/WhenCanIGoHome.git"
  },
  "author": "Craig Huff",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/cthuff/WhenCanIGoHome/issues"
  },
  "homepage": "https://github.com/cthuff/WhenCanIGoHome#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "^17.0.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "myicon.icns",
        "name": "When Can I Go Home",
        "arch": "arm64"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "WCIGH",
            "backgroun": "dmg-background.png",
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        }
      ]
    }
  }
}
